<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="1"
        android:padding="@dimen/text_input_layout_padding"
        app:rowCount="2">

        <CheckBox
            android:id="@+id/cb_call_reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/call_reminder_selector"
            android:ellipsize="end"
            android:lines="2"
            android:paddingLeft="@dimen/text_input_layout_padding"
            android:text="@string/remind_to_call"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/primary_text" />

        <CheckBox
            android:id="@+id/cb_auto_messages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/horizontal_margin"
            android:button="@drawable/auto_messages_selector"
            android:ellipsize="end"
            android:lines="2"
            android:paddingLeft="@dimen/text_input_layout_padding"
            android:text="Send Auomated messages to selected contacts"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/primary_text" />


    </android.support.v7.widget.GridLayout>
</android.support.v7.widget.CardView>