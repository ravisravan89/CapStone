<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_elevation"
    app:cardUseCompatPadding="true">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:columnCount="1"
        android:padding="@dimen/text_input_layout_padding"
        app:rowCount="3">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/ttl_compose_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_input_layout_padding"
            android:background="@color/primary_light"
            android:padding="@dimen/text_input_layout_padding"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_compose_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="Compose Message (160 Chars Max)*"
                android:maxLength="160"
                android:padding="@dimen/text_input_layout_padding"
                android:textColor="@color/color_appintro_bg"
                android:textColorHint="@color/colorAccent"
                android:textSize="@dimen/edittext_size" />

        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/add_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_gravity="center_horizontal"
            android:drawableLeft="@drawable/ic_add_contact"
            android:drawablePadding="@dimen/text_input_layout_padding"
            android:gravity="center_vertical"
            android:padding="@dimen/text_input_layout_padding"
            android:text="Add Contact"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondary_text" />

        <com.wefika.flowlayout.FlowLayout
            android:id="@+id/flow_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|top" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/text_input_layout_padding"
            android:text="@string/charges_message"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="@color/secondary_text" />


    </android.support.v7.widget.GridLayout>
</android.support.v7.widget.CardView>